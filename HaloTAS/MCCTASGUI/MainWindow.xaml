<Window x:Class="MCCTASGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCCTASGUI"
        mc:Ignorable="d"
        Title="MCCTAS GUI - github.com/Scaless/HaloTAS" Height="720" Width="1280" Loaded="Window_Loaded">
    <Grid>
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="Close"></MenuItem>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Map Data" Click="MenuOpenMapData"></MenuItem>
                <MenuItem Header="Input Editor" Click="MenuOpenInputEditor"></MenuItem>
                <MenuItem Header="Halo 1 Cinematic Camera" Click="MenuOpenH1CinematicCamera"></MenuItem>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About" Click="MenuOpenAbout"></MenuItem>
            </MenuItem>
        </Menu>
        <TextBlock x:Name="tblkStatusConnected" HorizontalAlignment="Left" Margin="17,57,0,0" Text="TextBlock" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Button x:Name="btnInject" Content="Inject" HorizontalAlignment="Left" Margin="27,118,0,0" VerticalAlignment="Top" Click="btnInject_Click"/>
        <Button x:Name="btnKillConnection" Content="Kill Connection" HorizontalAlignment="Left" Margin="88,118,0,0" VerticalAlignment="Top" Click="btnKillConnection_Click"/>
        <Button x:Name="btnTestRequest" Content="Button" HorizontalAlignment="Left" Margin="66,193,0,0" VerticalAlignment="Top" Click="btnTestRequest_Click"/>


    </Grid>
</Window>
