<UserControl x:Class="MCCTASGUI.Controls.InputTickItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCTASGUI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <TextBlock Grid.Column="0">Tick#</TextBlock>
        <Menu Grid.Column="1">
            <MenuItem Header="Add">
                <MenuItem Header="Mouse">
                    <MenuItem Header="Mouse X"></MenuItem>
                    <MenuItem Header="Mouse Y"></MenuItem>
                </MenuItem>
                <MenuItem Header="Action">
                    <MenuItem Header="Throw Grenade"></MenuItem>
                    <MenuItem Header="Melee"></MenuItem>
                </MenuItem>
            </MenuItem>
        </Menu>
        <TextBlock Grid.Column="2" HorizontalAlignment="Center">asdf</TextBlock>
    </Grid>
</UserControl>
