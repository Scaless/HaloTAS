<Window x:Class="TASEditorWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TASEditorWPF"
        mc:Ignorable="d"
        Title="Halo TAS Editor" Height="720" Width="1280" Icon="Resources/gamespy.ico">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button x:Name="ButtonLoadHBIN" Content="Load HBIN" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Grid.Row="0" Click="ButtonLoadHBIN_Click"/>

        <Grid Background="DarkGray" Height="Auto" Grid.Row="1" Margin="10" Grid.ColumnSpan="2">
            <ScrollViewer Grid.Row="0" HorizontalAlignment="Stretch">
                <Grid x:Name="GridEntries" HorizontalAlignment="Left">
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>

            
